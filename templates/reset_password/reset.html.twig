{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="row pt-5">
        <div class="col-md-6 mx-auto">
            <h1>{{'resetPassword.title'|trans}}</h1>

            {{ form_start(resetForm) }}
                {{ form_row(resetForm.plainPassword) }}
                <button class="btn btn-primary">{{'resetPassword.button'|trans}}</button>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
