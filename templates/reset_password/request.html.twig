{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-error" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class='pt-5'>
        <div class="col-md-6 mx-auto">
            <h1>{{'resetPasswordRequest.title'|trans}}</h1>

            {{ form_start(requestForm) }}
                <div class='pb-4'>
                    <small>{{'
                        Enter your email address, and we will send you a
                        link to reset your password.'|trans}}
                    </small>
                </div>
                {{ form_row(requestForm.email) }}


                <button class="btn btn-primary">{{'resetPasswordRequest.btn'|trans}}</button>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}
