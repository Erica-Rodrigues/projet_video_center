{% extends 'base.html.twig' %}

{% block title %}{{ video.id ~" "~video.title }}{% endblock %}

{% block body %}
    <h1>{{ video.title }}</h1>
    <iframe width="640" height="480" src={{ video.videoLink }}></iframe>
    <p>{{ video.description }}</p>
    <p>{{ video.createdAt ? video.createdAt|date('Y-m-d H:i:s') : '' }}</p>
    <p> {{ video.user.firstname }} {{ video.user.lastname }}</p>


    <a href="{{ path('app_video_index') }}">{{'videoShowBtn.backToList'|trans}}</a>

    {% if app.user and app.user.isVerified %}
        {% if app.user is same as video.user %}
            <a href="{{ path('app_video_edit', {'id': video.id}) }}">{{'videoShow.editBtn'|trans}}</a>

            {{ include('video/_delete_form.html.twig') }}
        {% endif %}
    {% endif %}
{% endblock %}
